rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      // Check if the admin token exists and is true.
      // This prevents errors for users who don't have the token at all.
      return request.auth.token.get('admin', false) == true;
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }
    
    match /caterers/{catererId} {
      allow read: if true; // Publicly readable for clients to see caterer info
      allow create: if request.auth.uid == catererId;
      allow update: if request.auth.uid == catererId || isAdmin();
      allow delete: if isAdmin();
    }

    match /deliveryPeople/{deliveryPersonId} {
      allow read: if request.auth.uid == deliveryPersonId || isAdmin();
      allow create: if request.auth.uid == deliveryPersonId;
      allow update: if request.auth.uid == deliveryPersonId || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /meals/{mealId} {
      allow read: if true; // Meals are public for clients to see
      allow create, update: if request.auth.uid == request.resource.data.createdBy || isAdmin();
      allow delete: if request.auth.uid == resource.data.createdBy || isAdmin();

      match /userRatings/{userId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
    
    match /orders/{orderId} {
      allow create: if request.auth.uid == request.resource.data.clientId;
      allow read: if request.auth.uid == resource.data.clientId || request.auth.uid in resource.data.catererIds || request.auth.uid == resource.data.deliveryPersonId || isAdmin();
      allow update: if request.auth.uid in resource.data.catererIds || request.auth.uid == resource.data.deliveryPersonId || isAdmin();
    }

    match /admins/{adminId} {
        allow read, write: if isAdmin();
    }

    match /notifications/{notificationId} {
        allow read, update: if request.auth.uid == resource.data.userId;
        allow create: if true; // Allow services to create notifications
    }
  }
}

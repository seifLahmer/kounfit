rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Default deny all reads and writes
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Profile Images
    // Path: /profile-images/{userId}/{fileName}
    match /profile-images/{userId}/{fileName} {
      // Anyone can read profile images
      allow read: if true;
      // Only the authenticated user can write to their own profile image folder
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Meal Images
    // Path: /meal-images/{catererId}/{fileName}
    match /meal-images/{catererId}/{fileName} {
      // Anyone can read meal images
      allow read: if true;
      // Only an authenticated user (assumed to be a caterer) can write.
      // For stricter rules, you would check a custom claim or Firestore document.
      allow write: if request.auth != null && request.auth.uid == catererId;
    }
  }
}
